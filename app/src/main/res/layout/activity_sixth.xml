<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthActivity">

    <EditText
        android:id="@+id/etSharedPref1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Secret nr 1"
        app:layout_constraintBottom_toTopOf="@+id/etSharedPref2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/etSharedPref2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Secret nr 2"
        app:layout_constraintBottom_toTopOf="@+id/btnLoadPref"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSharedPref1" />

    <Button
        android:id="@+id/btnSavePref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save pref"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoadPref" />

    <Button
        android:id="@+id/btnLoadPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Pref"
        app:layout_constraintBottom_toTopOf="@+id/btnSavePref"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSharedPref2" />
</androidx.constraintlayout.widget.ConstraintLayout>